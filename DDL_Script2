
CREATE TABLE com_jegc_Products (
  ID NVARCHAR(36) NOT NULL,
  Name NVARCHAR(5000),
  Description NVARCHAR(5000),
  ImageUrl NVARCHAR(5000),
  ReleaseDate TIMESTAMP_TEXT,
  DiscontinuedDate TIMESTAMP_TEXT,
  Price DECIMAL(16, 2),
  Height DECIMAL(16, 2),
  Width DECIMAL(16, 2),
  Depth DECIMAL(16, 2),
  Quantity DECIMAL(16, 2),
  UnitOfMeasure_ID NVARCHAR(2),
  Currency_ID NVARCHAR(3),
  Category_ID NVARCHAR(1),
  Supplier_ID NVARCHAR(36),
  DimensionUnit_ID NVARCHAR(2),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_Orders (
  ID NVARCHAR(36) NOT NULL,
  Date DATE_TEXT,
  Customer NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_OrderItems (
  ID NVARCHAR(36) NOT NULL,
  Order_ID NVARCHAR(36),
  Product_ID NVARCHAR(36),
  Quantity INTEGER,
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_Suppliers (
  ID NVARCHAR(36) NOT NULL,
  Name NVARCHAR(5000),
  Street NVARCHAR(5000),
  City NVARCHAR(5000),
  State NVARCHAR(2),
  PostalCode NVARCHAR(5),
  Country NVARCHAR(3),
  Email NVARCHAR(5000),
  Phone NVARCHAR(5000),
  Fax NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_Categories (
  ID NVARCHAR(1) NOT NULL,
  Name NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_StockAvailability (
  ID INTEGER NOT NULL,
  Description NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_Currencies (
  ID NVARCHAR(3) NOT NULL,
  Description NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_UnitOfMeasures (
  ID NVARCHAR(2) NOT NULL,
  Description NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_DimensionUnits (
  ID NVARCHAR(2) NOT NULL,
  Description NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_Months (
  ID NVARCHAR(2) NOT NULL,
  Description NVARCHAR(5000),
  ShortDescription NVARCHAR(3),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_ProductReview (
  ID NVARCHAR(36) NOT NULL,
  Product_ID NVARCHAR(36),
  CreatedAt NVARCHAR(5000),
  Name NVARCHAR(5000),
  Rating INTEGER,
  Comment NVARCHAR(5000),
  PRIMARY KEY(ID)
);

CREATE TABLE com_jegc_SalesData (
  ID NVARCHAR(36) NOT NULL,
  DeliveryDate TIMESTAMP_TEXT,
  Revenue DECIMAL(16, 2),
  Product_ID NVARCHAR(36),
  Currency_ID NVARCHAR(3),
  DeliveryMonth_ID NVARCHAR(2),
  PRIMARY KEY(ID)
);

